<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="8dp"/>
            <solid android:color="#60FFFFFF"/>
            <stroke android:width="2dp" android:color="#FFFFFF"/> </shape>
    </item>

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="8dp"/>
            <solid android:color="#50FFFFFF"/> <stroke android:width="1.5dp" android:color="#CCCCCC"/> </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <corners android:radius="8dp"/>
            <solid android:color="#40FFFFFF"/> <stroke android:width="1dp" android:color="#AAAAAA"/> </shape>
    </item>
</selector>