<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MoreFragment">

    <VideoView
        android:id="@+id/videoBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="false"
        android:clickable="false"
        android:scaleType="centerCrop" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:clipToPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="72dp"
            android:layout_marginBottom="48dp"
            android:background="@drawable/setting_bg_customize"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:padding="20dp"
            android:elevation="12dp"
            android:clipToPadding="false"
            android:alpha="0.96">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Appearance"
                android:textColor="#E6FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp"
                android:fontFamily="@font/kronaone_regular"
                android:shadowColor="#6618FFFF"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="4" />


            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switchLightMode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enable Light Mode"
                android:textColor="#D0FFFFFF"
                android:textSize="16sp"
                android:paddingVertical="6dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnChangeBackground"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Change Background"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:elevation="6dp"
                android:background="@drawable/setting_button_customize"
                android:translationZ="6dp"
                android:fontFamily="@font/orbitron_bold"
                android:paddingVertical="12dp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Notifications"
                android:textColor="#E6FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold"
                android:fontFamily="@font/kronaone_regular"
                android:shadowColor="#6618FFFF"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="4" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switchNotifications"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enable Notifications"
                android:textColor="#D0FFFFFF"
                android:textSize="16sp"
                android:paddingVertical="6dp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Information"
                android:textColor="#E6FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold"
                android:fontFamily="@font/kronaone_regular"
                android:shadowColor="#66FFFFFF"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="3" />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnRate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Rate the App"
                android:textAllCaps="false"
                android:elevation="6dp"
                android:background="@drawable/setting_button_customize"
                android:translationZ="6dp"
                android:fontFamily="@font/orbitron_bold"
                android:paddingVertical="12dp"
                android:textColor="#FFFFFF"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnContact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Contact Us"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:elevation="6dp"
                android:background="@drawable/setting_button_customize"
                android:translationZ="6dp"
                android:fontFamily="@font/orbitron_bold"
                android:paddingVertical="12dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnFaq"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="FAQ's"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:elevation="6dp"
                android:background="@drawable/setting_button_customize"
                android:translationZ="6dp"
                android:fontFamily="@font/orbitron_bold"
                android:paddingVertical="12dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnPrivacy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Privacy Policy"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:elevation="6dp"
                android:background="@drawable/setting_button_customize"
                android:translationZ="6dp"
                android:fontFamily="@font/orbitron_bold"
                android:paddingVertical="12dp"/>





            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnCloseApp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="Close App"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:background="@drawable/close_app_button"
                android:elevation="8dp"
                android:textSize="16sp"
                android:fontFamily="@font/orbitron_bold" />
        </LinearLayout>
    </ScrollView>
</FrameLayout>
